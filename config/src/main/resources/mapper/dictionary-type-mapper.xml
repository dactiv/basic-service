<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- 数据字典类型表数据访问映射 -->
<mapper namespace="com.github.dactiv.basic.config.dao.DictionaryTypeDao">

    <resultMap id="baseResultMap" type="com.github.dactiv.basic.config.dao.entity.DictionaryType">
        <id column="id" jdbcType="INTEGER" property="id"/>
        <result column="code" jdbcType="VARCHAR" property="code"/>
        <result column="name" jdbcType="VARCHAR" property="name"/>
        <result column="parent_id" jdbcType="INTEGER" property="parentId"/>
        <result column="creation_time" jdbcType="TIMESTAMP" property="creationTime"/>
        <result column="remark" jdbcType="VARCHAR" property="remark"/>
    </resultMap>

    <!-- 查询条件 -->
    <sql id="selectCondition">
        <include refid="com.github.dactiv.basic.basic.config.support.Include.dictionaryTypeSelectCondition"></include>
    </sql>

    <sql id="baseColumnList">
        id,
        code,
        name,
        parent_id,
        creation_time,
        remark
    </sql>

    <select id="get" resultMap="baseResultMap">
        SELECT
            <include refid="baseColumnList"/>
        FROM
            tb_dictionary_type
        WHERE
            id = #{id}
    </select>

    <select id="lock" resultMap="baseResultMap">
        SELECT
            <include refid="baseColumnList"/>
        FROM
            tb_dictionary_type
        WHERE
            id = #{id}
        FOR UPDATE
    </select>

    <select id="count" resultType="long" parameterType="java.util.Map">
        SELECT
            COUNT(id)
        FROM
            tb_dictionary_type
        <include refid="selectCondition" />
    </select>

    <select id="find" resultMap="baseResultMap" parameterType="java.util.Map">
        SELECT
            <include refid="baseColumnList"/>
        FROM
            tb_dictionary_type
        <include refid="selectCondition"/>
        ORDER BY id DESC
        <if test="first != null and last != null">
            LIMIT #{first}, #{last}
        </if>
    </select>

    <delete id="delete">
        DELETE FROM tb_dictionary_type WHERE id = #{id}
    </delete>

    <update id="update" parameterType="dictionaryType">
        UPDATE
            tb_dictionary_type
        SET
            code = #{code},
            name = #{name},
            parent_id = #{parentId},
            creation_time = #{creationTime},
            remark = #{remark}
        WHERE
            id = #{id}
    </update>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id" parameterType="dictionaryType">
        INSERT INTO tb_dictionary_type (
            code,
            name,
            parent_id,
            creation_time,
            remark
        ) VALUES (
            #{code},
            #{name},
            #{parentId},
            #{creationTime},
            #{remark}
        )
    </insert>

    <!-- 将代码添加到以下区域，以免生成后被覆盖 -->

</mapper>