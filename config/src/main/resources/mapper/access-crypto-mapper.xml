<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- 访问加解密表数据访问映射 -->
<mapper namespace="com.github.dactiv.basic.config.dao.AccessCryptoDao">

    <resultMap id="baseResultMap" type="com.github.dactiv.basic.basic.support.crypto.access.AccessCrypto">
        <id column="id" jdbcType="INTEGER" property="id"/>
        <result column="name" jdbcType="VARCHAR" property="name"/>
        <result column="type" jdbcType="VARCHAR" property="type"/>
        <result column="value" jdbcType="VARCHAR" property="value"/>
        <result column="creation_time" jdbcType="TIMESTAMP" property="creationTime"/>
        <result column="request_decrypt" jdbcType="TINYINT" property="requestDecrypt"/>
        <result column="response_encrypt" jdbcType="TINYINT" property="responseEncrypt"/>
        <result column="enabled" jdbcType="TINYINT" property="enabled"/>
        <result column="remark" jdbcType="VARCHAR" property="remark"/>
    </resultMap>

    <!-- 查询条件 -->
    <sql id="selectCondition">
        <include refid="com.github.dactiv.basic.basic.config.support.Include.accessCryptoSelectCondition"></include>
    </sql>

    <sql id="baseColumnList">
        id,
        name,
        type,
        value,
        creation_time,
        request_decrypt,
        response_encrypt,
        enabled,
        remark
    </sql>

    <select id="get" resultMap="baseResultMap">
        SELECT
            <include refid="baseColumnList"/>
        FROM
            tb_access_crypto
        WHERE
            id = #{id}
    </select>

    <select id="lock" resultMap="baseResultMap">
        SELECT
            <include refid="baseColumnList"/>
        FROM
            tb_access_crypto
        WHERE
            id = #{id}
        FOR UPDATE
    </select>

    <select id="count" resultType="long" parameterType="java.util.Map">
        SELECT
            COUNT(id)
        FROM
            tb_access_crypto
        <include refid="selectCondition" />
    </select>

    <select id="find" resultMap="baseResultMap" parameterType="java.util.Map">
        SELECT
            <include refid="baseColumnList"/>
        FROM
            tb_access_crypto
        <include refid="selectCondition"/>
        ORDER BY id DESC
        <if test="first != null and last != null">
            LIMIT #{first}, #{last}
        </if>
    </select>

    <delete id="delete">
        DELETE FROM tb_access_crypto WHERE id = #{id}
    </delete>

    <update id="update" parameterType="com.github.dactiv.basic.basic.support.crypto.access.AccessCrypto">
        UPDATE
            tb_access_crypto
        SET
            name = #{name},
            type = #{type},
            value = #{value},
            creation_time = #{creationTime},
            request_decrypt = #{requestDecrypt},
            response_encrypt = #{responseEncrypt},
            enabled = #{enabled},
            remark = #{remark}
        WHERE
            id = #{id}
    </update>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id"
            parameterType="com.github.dactiv.basic.basic.support.crypto.access.AccessCrypto">
        INSERT INTO tb_access_crypto (
            name,
            type,
            value,
            creation_time,
            request_decrypt,
            response_encrypt,
            enabled,
            remark
        ) VALUES (
            #{name},
            #{type},
            #{value},
            #{creationTime},
            #{requestDecrypt},
            #{responseEncrypt},
            #{enabled},
            #{remark}
        )
    </insert>

    <!-- 将代码添加到以下区域，以免生成后被覆盖 -->

</mapper>