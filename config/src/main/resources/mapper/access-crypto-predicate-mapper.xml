<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- 访问加解密条件表数据访问映射 -->
<mapper namespace="com.github.dactiv.basic.config.dao.AccessCryptoPredicateDao">

    <resultMap id="baseResultMap" type="com.github.dactiv.basic.basic.support.crypto.access.AccessCryptoPredicate">
        <id column="id" jdbcType="INTEGER" property="id"/>
        <result column="name" jdbcType="VARCHAR" property="name"/>
        <result column="value" jdbcType="VARCHAR" property="value"/>
        <result column="creation_time" jdbcType="TIMESTAMP" property="creationTime"/>
        <result column="remark" jdbcType="VARCHAR" property="remark"/>
        <result column="access_crypto_id" jdbcType="INTEGER" property="accessCryptoId"/>
    </resultMap>

    <!-- 查询条件 -->
    <sql id="selectCondition">
        <include refid="com.github.dactiv.basic.basic.config.support.Include.accessCryptoPredicateSelectCondition"></include>
    </sql>

    <sql id="baseColumnList">
        id,
        name,
        value,
        creation_time,
        remark,
        access_crypto_id
    </sql>

    <select id="get" resultMap="baseResultMap">
        SELECT
            <include refid="baseColumnList"/>
        FROM
            tb_access_crypto_predicate
        WHERE
            id = #{id}
    </select>

    <select id="lock" resultMap="baseResultMap">
        SELECT
            <include refid="baseColumnList"/>
        FROM
            tb_access_crypto_predicate
        WHERE
            id = #{id}
        FOR UPDATE
    </select>

    <select id="count" resultType="long" parameterType="java.util.Map">
        SELECT
            COUNT(id)
        FROM
            tb_access_crypto_predicate
        <include refid="selectCondition" />
    </select>

    <select id="find" resultMap="baseResultMap" parameterType="java.util.Map">
        SELECT
            <include refid="baseColumnList"/>
        FROM
            tb_access_crypto_predicate
        <include refid="selectCondition"/>
        ORDER BY id DESC
        <if test="first != null and last != null">
            LIMIT #{first}, #{last}
        </if>
    </select>

    <delete id="delete">
        DELETE FROM tb_access_crypto_predicate WHERE id = #{id}
    </delete>

    <update id="update" parameterType="com.github.dactiv.basic.basic.support.crypto.access.AccessCryptoPredicate">
        UPDATE
            tb_access_crypto_predicate
        SET
            name = #{name},
            value = #{value},
            creation_time = #{creationTime},
            remark = #{remark},
            access_crypto_id = #{accessCryptoId}
        WHERE
            id = #{id}
    </update>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id"
            parameterType="com.github.dactiv.basic.basic.support.crypto.access.AccessCryptoPredicate">
        INSERT INTO tb_access_crypto_predicate (
            name,
            value,
            creation_time,
            remark,
            access_crypto_id
        ) VALUES (
            #{name},
            #{value},
            #{creationTime},
            #{remark},
            #{accessCryptoId}
        )
    </insert>

    <!-- 将代码添加到以下区域，以免生成后被覆盖 -->

</mapper>